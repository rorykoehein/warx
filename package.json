{
  "name": "nodewarx-server",
  "version": "1.0.0",
  "main": "www/index.js",
  "license": "GPL-3.0+",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "redux": "^3.7.2",
    "redux-node-logger": "^0.1.0",
    "redux-observable": "^0.17.0",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "reselect": "^3.0.1",
    "rxjs": "^5.5.2",
    "socket.io": "^2.0.4"
  },
  "scripts": {
    "start": "node ./server/www",
    "dev": "NODE_ENV=development babel-node --inspect ./server/www",
    "dev1": "NUM_BOTS=0 LOCATION=eu SERVER_NAME=eu PORT=7001 ADDRESS=http://localhost:7001 HUB=http://localhost:7001 NODE_ENV=development babel-node ./server/www",
    "dev2": "NUM_BOTS=0 LOCATION=us SERVER_NAME=us PORT=7000 ADDRESS=http://localhost:7000 HUB=http://localhost:7001 NODE_ENV=development babel-node ./server/www",
    "test": "jest -o --watch",
    "test-ci": "jest --ci --coverage --testResultsProcessor=\"jest-junit\"",
    "build-server": "babel ./server/ -d ./dist/server",
    "build-shared": "babel ./client/src/types -d ./dist/client/src/types"
  },
  "devDependencies": {
    "babel-jest": "^22.0.4",
    "babel-preset-react-app": "^3.1.0",
    "jest": "^22.0.4",
    "jest-junit": "^3.4.1",
    "plop": "^1.9.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/server/**/__tests__/**/*.{js,mjs}",
      "<rootDir>/server/**/?(*.)(spec|test).{js,mjs}"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": ["server/**/*.js"],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleFileExtensions": [
      "mjs",
      "js"
    ]
  }
}
